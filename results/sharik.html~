		<script>
			var fader = document.querySelector('.page_fader');
			setTimeout(pageFader, 1000);
			function pageFader() {
				fader.style.opacity = 0;
				fader.style.zIndex = -2;
			}
		</script>
		<script>
			var meal = document.querySelector('.meal');
			var sharik = document.querySelector('.sharik');
			var mealContainer = document.querySelector('.meal-container');
			var sharikContainer = document.querySelector('.sharikContainer');
			meal.onclick = function() {
				sharikContainer.style.display = 'none';
				mealContainer.style.display = 'block';
				meal.classList.add('body__heading_result-active');
				meal.classList.remove('body__heading_result-notactive');
				sharik.classList.add('body__heading_result-notactive');
				sharik.classList.remove('body__heading_result-active');
			}
			sharik.onclick = function() {
				mealContainer.style.display = 'none';
				sharikContainer.style.display = 'block';
				sharik.classList.add('body__heading_result-active');
				sharik.classList.remove('body__heading_result-notactive');
				meal.classList.add('body__heading_result-notactive');
				meal.classList.remove('body__heading_result-active');
			}
		</script>
